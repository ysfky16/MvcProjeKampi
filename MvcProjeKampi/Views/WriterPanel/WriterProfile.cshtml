@model Entity.Concrete.Writer
@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLAyout.cshtml";
}

<h2>Profilimi Güncelle</h2>
<hr />

@using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.HiddenFor(x => x.WriterId)
        @Html.Label("Adınız", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Soyadınız", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterSurmame, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterSurmame, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Şifreniz", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterTitle, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Resim Linki", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterImage, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Mailiniz", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Şifre", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Hakkında", new { @class = "form-label" })
        @Html.TextAreaFor(x => x.About, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.About, null, new { @class = "text-danger" })
        <br />

        <button class="btn btn-success">Güncelle</button>
    </div>


}



