@using Entity.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int siraNo = 0;
}
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sıra</th>
            <th>Kategori</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            siraNo++;
            <tr>
                <td>@siraNo</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>
                <td><button class="btn btn-primary btn-sm">Güncelle</button></td>
            </tr>

        }

    </tbody>

</table>

<a href="/AdminCategory/AddCategory/" class="btn btn-info btn-sm">Yeni Kategori</a>

