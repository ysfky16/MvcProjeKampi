@model Entity.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<hr />
<br />

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Açıklama", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, null, new { @class = "text-danger" })
        <br />
        @*@Html.ActionLink("Kaydet", "AddCategory","Category", new { @class = "btn btn-primary" })*@
        <button class="btn btn-success">Kaydet</button>
    </div>
}


