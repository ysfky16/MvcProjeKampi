@using Entity.Concrete
@model List<Category>
@{
    Layout = null;

    var siraNo = 0;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-hover">
    <thead class="table table-primary">
        <tr>
            <th>Sıra</th>
            <th>Ad</th>
            @*<th>Açıklama</th>*@
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            siraNo++;
            <tr>
                <td>@siraNo</td>
                <td>@item.CategoryName</td>
                @*<td>@item.CategoryDescription</td>*@
                <td>@item.CategoryStatus</td>
                <td><button class="btn btn-primary btn-sm">Güncelle</button></td>
            </tr>            
        }

    </tbody>
</table>

<br />

<a href="/Category/AddCategory/" class="btn btn-info btn-sm">Yeni Kategori</a>
